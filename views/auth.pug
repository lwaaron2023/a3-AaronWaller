doctype
html(lang="en")
    head
        meta(charset='UTF-8', name='viewport', content='width=device.width, initial-scale=1' lang='en')
        meta(name='description', content='A log in screen for Gompeis Gear')
        title Gompei's Gear Login
        link(href='/public/stylesheets/tailwind.css' rel='stylesheet' type='text/css')
        script(src='/public/javascripts/auth.js')
        // get rid of favicon error
        link(rel='icon' href='data:;base64,iVBORw0KGgo=')
    .container.mx-auto.flex.flex-col.justify-center.items-center.min-h-screen.bg-red-100
        div#login
            form.grid.grid-cols-2.gap-6(action='/login/password' method='post')
                h1.text-xl.font-bold.col-span-2.justify-self-center You Must Log in to Continue
                label.m-4(for='username') Username
                input#username(type='text' name='username' placeholder='Username' required='')
                label.m-4(for='password') Password
                input#password(type='password' name='password' placeholder='Password' required='')
                label#response.item-center.col-span-2().text-center=message
                button#submit.item-center.col-span-2.bg-gray-200(type='submit') Log In
                button#newUser.item-center.col-span-2.bg-gray-200(type='button' onclick='switchScreen()') Create New Account

        div#create.hidden
            form#create.grid.grid-cols-2.gap-6(action='/signup' method='post')
                h1.text-xl.font-bold.col-span-2.justify-self-center Create a New Account
                label.m-4(for='username') Username
                input#username_new(type='text' name='username' placeholder='Username' required='')
                label.m-4(for='password_new') Password
                input#password_new(type='password' name='password' placeholder='Password' required='')
                button#submitC.item-center.col-span-2.bg-gray-200(type='submit') Create Account
                button#newUserC.item-center.col-span-2.bg-gray-200(type='button' onclick='switchScreen()') Back To Login In